{
  "include": ["src"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.stories.tsx"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "jsx": "react",
    "extendedDiagnostics": true,
    "strict": true,
    "target": "ES6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true
  }
}
